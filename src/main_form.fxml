<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>


<GridPane fx:controller="MainForm" fx:id="root"
                             xmlns:fx="http://javafx.com/fxml">
	<VBox fx:id="verticalScale" GridPane.columnIndex="0"
	                            styleClass="scale"/>
	<!-- Место для mainView /-->
	<VBox styleClass="controlPanel" GridPane.columnIndex="2">
		<Label fx:id="speedXLabel"/>
		<Label fx:id="speedYLabel"/>
		<Label fx:id="speedLabel"/>
		<Label fx:id="xLabel"/>
		<Label fx:id="yLabel"/>
		<Label fx:id="timeLabel"/>
		<Button text="Smth2" onAction="#repaintBackground"/>
	</VBox>
</GridPane>
