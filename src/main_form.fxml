<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="MainForm" fx:id="root" alignment="CENTER">
	
	<HBox alignment="CENTER" styleClass="horizontal_control_panel" GridPane.columnSpan="3">
		<CheckBox text="Показать решение" fx:id="bisectionBox" selected="true"/>
		<HBox alignment="CENTER">
			<Label fx:id="selectedSpeed"/>
			<Slider fx:id="speedSlider" min="100" max="1000" value="655" styleClass="speed_slider"/>
		</HBox>
		<HBox alignment="CENTER">
			<Label fx:id="selectedSleep"/>
			<Slider fx:id="sleepSlider" min="0.01" max="10" value="0.1" styleClass="sleep_slider"/>
		</HBox>
	</HBox>

	<VBox prefWidth="200" alignment="CENTER" styleClass="vertical_control_panel"
		GridPane.rowIndex="1" GridPane.rowSpan="2">
		<HBox>
			<Label fx:id="nameLabel"/>
			<Label fx:id="infoLabel"/>
		</HBox>
		
		<Button text="Refill" onAction="#repaintBackground"/>
		<Button text="Stop" onAction="#stopTrying"/>
		<Button fx:id="refresher" text="Reset" onAction="#restart"/>
		
		<GridPane fx:id="windSpeedBox">
			<Label fx:id="xWindSpeedLabel" GridPane.rowIndex="1"/>
			<Label fx:id="yWindSpeedLabel" GridPane.rowIndex="2"/>
		</GridPane>
	</VBox>
	
	<Slider fx:id="horizontalScale" styleClass="horizontal_scale" GridPane.columnIndex="1"
			GridPane.rowIndex="2"/>
	
	<Slider fx:id="verticalScale" styleClass="vertical_scale" GridPane.columnIndex="2" GridPane.rowIndex="1"
		prefWidth="50"/>
</GridPane>
