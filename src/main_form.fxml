<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<GridPane fx:controller="MainForm" fx:id="root"
          xmlns:fx="http://javafx.com/fxml">
	<VBox prefWidth="200" alignment="CENTER">
		<HBox GridPane.columnIndex="0" GridPane.rowIndex="0" prefHeight="200">
			<Label fx:id="nameLabel"/>
			<Label fx:id="infoLabel"/>
		</HBox>
		<Button text="Refill" GridPane.columnIndex="0" GridPane.rowIndex="1"
		        onAction="#repaintBackground"/>
	</VBox>
	<Slider fx:id="horizontalScale" GridPane.columnIndex="1" styleClass="horizontal_scale"
			 GridPane.rowIndex="1"/>
	<Slider fx:id="verticalScale" GridPane.columnIndex="2" styleClass="vertical_scale"/>
</GridPane>
