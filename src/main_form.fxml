<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Slider?>
<GridPane fx:controller="MainForm" fx:id="root"
                             xmlns:fx="http://javafx.com/fxml">
	<!-- Место для mainView /-->
	<VBox styleClass="controlPanel" GridPane.columnIndex="0" prefWidth="200">
		<Label fx:id="speedXLabel"/>
		<Label fx:id="speedYLabel"/>
		<Label fx:id="speedLabel"/>
		<Label fx:id="xLabel"/>
		<Label fx:id="yLabel"/>
		<Label fx:id="timeLabel"/>
		<Label fx:id="angleLabel"/>
		<Button text="Refill" onAction="#repaintBackground"/>
	</VBox>
	<Slider fx:id="horizontalScale" GridPane.columnIndex="1" styleClass="horizontal_scale"
			 GridPane.rowIndex="1"/>
	<Slider fx:id="verticalScale" GridPane.columnIndex="2" styleClass="vertical_scale"/>
</GridPane>
